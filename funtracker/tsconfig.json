{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./",
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@model/*": [
        "src/model/*"
      ],
      "@common/*": [
        "common/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "common/**/*.ts",
    "spec/**/*.ts",
    "./app.config.ts"
  ],
  "exclude": [
    "src/public/"
  ],
  // "references": [
  //   {"path": "app/"}
  // ],
  "extends": "expo/tsconfig.base"
}
